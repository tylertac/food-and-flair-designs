<section class="home-posts">
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			{% if post.data.image %}
				<a href="{{ post.url | url }}">
		    	<img class="post-list-image" src="{{ post.data.image }}"></img>
				</a>
		  {% endif %}
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
		</article>
	{% endfor %}
</section>
